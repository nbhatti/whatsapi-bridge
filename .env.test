# ========================================
# Test Environment Configuration
# ========================================
# Used for automated testing

NODE_ENV=test
PORT=3001
API_KEY=test-api-key
REDIS_URL=redis://localhost:6379/1
REDIS_DB=1

# Disable logging in tests
LOG_LEVEL=error
LOG_FILE_PATH=logs/test.log
LOG_CONSOLE=false

# WhatsApp configuration
WHATSAPP_SESSION_PATH=.wwebjs_test_auth
WHATSAPP_CLIENT_NAME=TestWhatsAppClient
SESSION_PATH=./test_sessions

# Socket.IO configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Security
JWT_SECRET=test-jwt-secret
JWT_EXPIRE=1h
WEBHOOK_ENCRYPTION_KEY=test-32-byte-webhook-encryption-key

# Analytics test defaults (smaller for faster tests)
ANALYTICS_DEFAULT_LIMIT=5
ANALYTICS_DEFAULT_DAYS=7
ANALYTICS_MAX_LIMIT=10

# Blocking Prevention (faster for tests)
MESSAGE_MIN_DELAY=100
MESSAGE_MAX_DELAY=500
MESSAGE_MAX_ATTEMPTS=2
MESSAGE_RETRY_DELAY=1000

# Feature flags for testing
FEATURE_AI_ENABLED=false
FEATURE_GROUPS_ENABLED=true
FEATURE_MEDIA_ENABLED=true
FEATURE_WEBHOOKS_ENABLED=false
FEATURE_BLOCKING_PREVENTION=true

# Mock WhatsApp for testing
MOCK_WHATSAPP=true

# Rate limiting (more lenient for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_ENABLED=false

# Redis settings for tests
REDIS_ENABLED=true
SYNC_INTERVAL_MS=1000
MAX_LIST_LENGTH=100
