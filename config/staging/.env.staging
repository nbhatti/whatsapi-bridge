# WhatsApp API Bridge - Staging Environment Configuration
# =======================================================

# Application Configuration
NODE_ENV=staging
PORT=3000
API_KEY=your-staging-api-key-here

# Redis Configuration - Feature Flag Controls
# Set REDIS_ENABLED=false to disable Redis and rollback
REDIS_ENABLED=true
REDIS_URL=redis://redis-staging:6379
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_RETRIES=5
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# Cache Configuration
MAX_LIST_LENGTH=10000
SYNC_INTERVAL_MS=5000

# Performance Monitoring Thresholds
MAX_MEMORY_USAGE_MB=1024
REDIS_MEMORY_THRESHOLD_MB=512
TARGET_TPS=500

# Logging Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Monitoring Credentials
GRAFANA_PASSWORD=staging-password
ACME_EMAIL=admin@yourdomain.com

# Sync Worker Configuration
SYNC_WORKER_ENABLED=true
SYNC_LAG_THRESHOLD_MS=1000

# Security Settings
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database URL (if used)
DATABASE_URL=

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret
JWT_EXPIRE=7d

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./sessions/staging
