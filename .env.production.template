# WhatsApp API Bridge - Production Environment Configuration
# Copy this file to /opt/whatsapi-bridge/.env.production and update values

# Application Configuration
NODE_ENV=production
API_KEY=your-secure-production-api-key-here
PORT=3000

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=redis-prod
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DB=0
REDIS_MAX_RETRIES=5
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# Cache Configuration
MAX_LIST_LENGTH=50000
SYNC_INTERVAL_MS=3000

# Database Configuration (if using PostgreSQL)
POSTGRES_DB=whatsapp
POSTGRES_USER=whatsapp
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://whatsapp:your-secure-database-password-here@postgres-prod:5432/whatsapp

# Logging Configuration
LOG_LEVEL=warn
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Performance Settings
MAX_MEMORY_USAGE_MB=2048
REDIS_MEMORY_THRESHOLD_MB=1024

# Security Settings
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Monitoring (optional)
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
